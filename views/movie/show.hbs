{{#each movie}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">{{this.title}} ({{this.year}})</h5>
        </div>
        <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
          <p class="card-text"><strong>Tóm tắt phim:</strong> {{this.plot}}</p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Genre:</strong> {{this.genreList}}</li>
          <li class="list-group-item"><strong>IMDb Rating:</strong> {{this.imDbRating}}</li>
        </ul>
      </div>
    </div>
  </div>
</div>
{{/each}}


<div class="container mt-5">
   <div class="card-deck mt-3 bg-light pl-3">
   <h2>Actors</h2>
   <p>
  {{#each actList}}
              <a class="text-success" href="/actors/{{this.id}}">{{this.name}} </a>,
  {{/each}}
</p> 
</div>
</div>

<div class="container mt-5">
  <h2>Review</h2>
  
  <!-- Review List -->
  {{#each reviewList}}
  <div class="card-deck mt-3">
    <!-- Review 1 -->
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{this.username}}</h5>
        <p class="card-text">{{this.date}}</p>
        <p class="card-text">{{this.content}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>



